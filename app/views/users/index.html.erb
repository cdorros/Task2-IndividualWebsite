<h1>All Users</h1>

<p>The following is a list of all users:</p>

<%= link_to 'New User', new_user_path %>
<br />

<table>
  <tr>
    <th>User ID</th>
    <th>Name</th>
    <th>Username</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id  %></td>
    <td><%= user.name  %></td>
    <td><%= user.user_name  %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

